<%= link_to "回首頁", root_path %>

<h1><%= @group.name %></h1>

<p><%= @group.description %></p>

<h2>文章列表</h2>

<%= link_to '新增文章', new_group_post_path(@group) if current_user.is_member_of?(@group) %>

<table>
  <thead>
    <tr>
      <td>標題</td>
      <td>內容</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, group_post_path(@group, post) %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
